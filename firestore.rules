rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Anyone can read users (for searching)
      allow read: if request.auth != null;
      // Only the user can write their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Friend requests collection
    match /friendRequests/{requestId} {
      // Users can read requests they sent or received
      allow read: if request.auth != null &&
        (resource.data.fromUserId == request.auth.uid ||
         resource.data.toUserId == request.auth.uid);
      // Authenticated users can create requests
      allow create: if request.auth != null &&
        request.resource.data.fromUserId == request.auth.uid;
      // Only sender or receiver can delete
      allow delete: if request.auth != null &&
        (resource.data.fromUserId == request.auth.uid ||
         resource.data.toUserId == request.auth.uid);
    }

    // Friends collection
    match /friends/{friendId} {
      // Users can read friend entries where they are involved (as userId OR friendId)
      allow read: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         resource.data.friendId == request.auth.uid);
      // Users can create friend entries for themselves OR when accepting a friend request
      // (when accepting, B creates A's record where friendId is B)
      allow create: if request.auth != null &&
        (request.resource.data.userId == request.auth.uid ||
         request.resource.data.friendId == request.auth.uid);
      // Users can delete their own friend entries
      allow delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
    }

    // Matches collection
    match /matches/{matchId} {
      // Players can read matches they participated in
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.players;
      // Authenticated users can create matches where they are a player
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.players;
      // Only the creator can delete
      allow delete: if request.auth != null &&
        resource.data.createdBy == request.auth.uid;
    }

    // Groups collection
    match /groups/{groupId} {
      // Members can read the group
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.memberIds;
      // Authenticated users can create groups (they become the creator)
      allow create: if request.auth != null &&
        request.resource.data.createdBy == request.auth.uid;
      // Only creator or members can update (for adding/removing members)
      allow update: if request.auth != null &&
        (resource.data.createdBy == request.auth.uid ||
         request.auth.uid in resource.data.memberIds);
      // Only the creator can delete
      allow delete: if request.auth != null &&
        resource.data.createdBy == request.auth.uid;
    }

    // Group members collection
    match /groupMembers/{membershipId} {
      // Allow reading if user is the member OR if user is in the group
      // Using simplified rule to avoid expensive get() calls
      allow read: if request.auth != null;
      // Authenticated users can create memberships
      allow create: if request.auth != null;
      // Only the user themselves can delete their membership
      allow delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
    }

    // Group matches collection
    match /groupMatches/{matchId} {
      // Allow reading all matches in groups where user has access
      // Security is enforced at the group level (user must be in group to see matches)
      allow read: if request.auth != null;
      // Authenticated users can create matches where they are a player
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.allPlayerIds;
      // Only the creator can delete
      allow delete: if request.auth != null &&
        resource.data.createdBy == request.auth.uid;
    }

    // User group preferences collection
    match /userGroupPreferences/{preferenceId} {
      // Users can only read their own preferences
      allow read: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      // Users can only create/update their own preferences
      allow create, update: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      // Users can delete their own preferences
      allow delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
    }
  }
}
